    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3.5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="Bike"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/rental_item"
            android:fontFamily="@font/inter"
            >

        </TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300"
            app:layout_constraintTop_toBottomOf="@id/rental_item"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:id="@+id/rental_price"
            android:fontFamily="@font/inter"
            >

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/stepper_border"
        android:orientation="horizontal"
        android:layout_weight="1.5"
        android:weightSum="3"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:id="@+id/decreaseRentalItem"
            android:fontFamily="@font/inter"
            >

        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/counterRentalItem"
            android:fontFamily="@font/inter"
            >

        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="+"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:id="@+id/increaseRentalItem"
            android:fontFamily="@font/inter"
            >

        </TextView>

    </LinearLayout>

</LinearLayout>